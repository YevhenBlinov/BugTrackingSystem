@model BugTrackingSystem.Service.Models.LoginViewModel
@{
    Layout = null;
    <style>
        .validation-summary-errors li {
            list-style-type: none;
        }

        .validation-summary-errors ul {
            padding: 0;
            margin: 0;
        }
    </style>
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/Content/login_style.css">
    <title>Login</title>
</head>
<body>
    <div class="Login">
        <div id="logo">
            <img src="~/Content/images/logo-vertical.png" />
        </div>

        @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "loginForm" }))
        {
            <div id="errorText">
                @Html.ValidationSummary(false)
            </div>
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email" })
            @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Password" })
            @Html.CheckBoxFor(x => x.RememberMe, new { @class = "form-control" })
            @*<input type="text" name="email" placeholder="Email"/>
                    <br/>
                    <input type="password" name="password" placeholder="Password"/>
                <input type="checkbox" name="RemebmerMe" />*@
            <span id="RememberMe">Remember me</span>
            <a id="ForgotPass" href="@Url.Action("ForgotPassword", "Login")">Forgot password</a>
                <input type="submit" value="Login" />
        }
    </div>
</body>
</html>
