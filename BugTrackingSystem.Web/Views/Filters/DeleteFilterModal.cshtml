

<div class="modal fade" id="DeleteFilterModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document" style="padding: 0;">
        <div class="modal-content">
            <div class="modal-header">
                <i class="fa fa-check-circle-o" aria-hidden="true" style="font-size: 24px; color: white; padding: 7px 5px 0 0"></i>
                <h3 style="display: inline-block; margin: 5px 0 0 0;">Confirm</h3>
            </div>
            <div class="modal-body">
                <h4>Are you sure you want to delete this filter?</h4>
            </div>

            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn modalCreateButton">Cancel</button>
                <button type="button" data-dismiss="modal" id="deleteFilter" class="btn modalCreateButton" onclick="deleteFilter(@ViewBag.FilterId)">Confirm</button>
            </div>
        </div>
    </div>
</div>


<script>
    function deleteFilter(id) {
        $.ajax({
            type: 'POST',
            data: { filterId: id },
            url: '/Filters/DeleteFilter',
            success: function () {
                $.ajax({
                    type: 'GET',
                    url: '/Filters/FiltersInfo',
                    success: function(data) {
                        $('#filtersContainer').html(data);
                    }
                });
            },
            error: function () {
                alert('En error occured. Please try again.');
            }
        });
    }
</script>

