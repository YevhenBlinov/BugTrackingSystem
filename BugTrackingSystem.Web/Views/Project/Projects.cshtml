
@{
    ViewBag.Title = "Projects";
}
<script>
    $(document).ready(function(e) {
        $('.selectpicker').selectpicker();
    });
</script>

<div class="col-lg-12 general-container">

    <div id="header" class="row">
        <div id="headerTitle" class="col-sm-6 col-xs-12">
            Projects
            <i class="fa fa-plus round" aria-hidden="true" data-toggle="modal" data-target="#addFilterModal"></i>
        </div>

        <div class="pull-right col-sm-6 col-xs-12" id="Local-search">
            <div id="imaginary_container">
                <div class="input-group stylish-input-group">
                    <input type="text" class="form-control" placeholder="Search">
                    <span class="input-group-addon" style="background-color: #F8FEFE">
                        <a href="#">
                            <i class="glyphicon glyphicon-search" style="font-size: 18px;"></i>
                        </a>
                    </span>
                </div>
            </div>
        </div>

    </div>
    <div class="row Sort_Title_Pagination">
        <div class="dropdown" style="display: inline-block">
            <span class="sticker-properties" style="padding-right: 10px; ">Sort by:</span>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Title <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
                <li><a href="#">Title</a></li>
                <li><a href="#">Key</a></li>
            </ul>
        </div>
        <div class=" pull-right" style="display: inline-block">
            <nav class="local-pagination">
                <ul class="pagination pagination-sm">
                    <li><a href="#">1</a></li>
                </ul>
            </nav>
        </div>
    </div>
   
    <div class="row">
        @for (int i = 0; i < 3; i++)
        {
            <div class="col-lg-4 col-md-4">
                <i class="fa fa-times-circle" aria-hidden="true"></i>
                <div class="custom-sticker">
                    <h4><b>Name</b></h4>
                    <div class="row">
                        <span class="col-lg-12">
                            <span class="sticker-properties"> Prefix </span>
                        </span>
                        <div class="projectInfo pull-right">
                            <i class="fa fa-pencil-square-o" aria-hidden="true">127</i>
                            <i class="fa fa-users" aria-hidden="true">6</i>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="row Sort_Title_Pagination">
        <i class="fa fa-th-list col-lg-2" aria-hidden="true" style="font-size: 18px; padding: 0; margin: 0"> Projects: Count</i>
        <div class=" pull-right" style="display: inline-block">
            <nav class="local-pagination">
                <ul class="pagination pagination-sm">
                    <li><a href="#">1</a></li>
                </ul>
            </nav>
        </div>
    </div>

</div>

