@model IEnumerable<BugTrackingSystem.Service.Models.UserViewModel>

<div class="modal fade" id="addUserToProjectModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document" style="padding: 0;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><i class="fa fa-times" aria-hidden="true" style="font-size: 34px;"></i></button>
                <i class="fa fa-pencil-square-o" aria-hidden="true" style="font-size: 24px; color: white; padding: 7px 5px 0 0"></i>
                <h3 style="display: inline-block; margin: 5px 0 0 0;">Delete user</h3>
            </div>
            <div class="modal-body col-xs-12">
                <div class="col-xs-12 padding0" style="border: 1px solid gainsboro" onclick="FUCK()">
                    <div class="ui checkbox col-xs-12 checkBoxHover" style="display: inline-flex">
                        <input type="checkbox" name="example">
                        <img src="../../Content/Images/orwell.jpeg" style="width: 40px; height: 40px; margin: 0 10px;" class="img-circle" />
                        <div class="inline-block" style="margin-top: 4px;">
                            <div style="font-size: 14px">user.FirstName</div>
                            <div style="font-size: 11px">user.Email</div>
                        </div>
                        <div style="font-size: 12px; margin-left: 250px; margin-top: 12px;">
                            user.Role
                        </div>
                    </div>
                    <div class="ui checkbox col-xs-12 checkBoxHover" style="display: inline-flex">
                        <input type="checkbox" name="example">
                        <img src="../../Content/Images/orwell.jpeg" style="width: 40px; height: 40px; margin: 0 10px;" class="img-circle" />
                        <div class="inline-block" style="margin-top: 4px;">
                            <div style="font-size: 14px">user.FirstName</div>
                            <div style="font-size: 11px">user.Email</div>
                        </div>
                        <div style="font-size: 12px; margin-left: 250px; margin-top: 12px;">
                            user.Role
                        </div>
                    </div>        
                </div>
                <div class="col-xs-12 padding0" style="font-size: 12px; margin-top: 5px;">
                    <span>Users: Model.Count()</span>
                    <span class="pull-right" id="choosenCount">Choosen: 0</span>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn modalCreateButton">No</button>
                <button type="button" data-dismiss="modal" class="btn modalCreateButton" id="addUserButton" onclick="">Add user</button>
            </div>
        </div>
    </div>
</div>



<script>
    var count = 0;
   $('.checkbox').checkbox({
           onChecked: function () {
               count++;
               $('#choosenCount').html('Choosen: ' + count);
           },
           onUnchecked: function () {
               count--;
               $('#choosenCount').html('Choosen: ' + count);
           }
       });
   
</script>