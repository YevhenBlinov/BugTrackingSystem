@model IEnumerable<BugTrackingSystem.Service.Models.FilterViewModel>

<div class="modal fade" id="searchFiltersModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document" style="padding: 0;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><i class="fa fa-times" aria-hidden="true" style="font-size: 34px;"></i></button>
                <i class="fa fa-filter" aria-hidden="true" style="font-size: 24px; color: white; padding: 7px 5px 0 0"></i>
                <h3 style="display: inline-block; margin: 5px 0 0 0;">Choose filter</h3>
            </div>
            <div class="modal-body col-xs-12" style="padding-bottom: 0">
                <div class="col-xs-12 padding0" id="addUserToProjectContainer" style="border: 1px solid gainsboro; max-height: 185px; overflow-y:scroll">
                    @foreach (var filter in Model)
                    {
                        <a class="redirectAncore" href="@Url.Action("Search", "Search", new {filterId = filter.FilterId})">
                            <div class="modalFiltersDiv" id="@filter.FilterId">
                                <span>@filter.Title</span>
                            </div>
                        </a>
                    }
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>