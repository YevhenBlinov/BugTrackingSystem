@model IEnumerable<BugTrackingSystem.Service.Models.BugViewModel>

@if (Model.Count() != 0)
{
    <div id="UniversalTable" style="margin: 10px 0;">
        @foreach (var bug in Model)
        {
            <a href="@Url.Action("Task", "Task", new {bugId = bug.BugId})" style="color: black">
                <div class="TableRow">
                    <div class="TableRowInfo row">
                        <div class="IconElement inline-block pull-left padding-top7">
                            @{ var priority = String.Format("../../Content/Images/" + bug.Priority + ".png"); }
                            <img src="@priority" width="35" height="35" />
                        </div>
                        <div class="col-sm-5 col-xs-10 padding-top7">
                            <div class="ProjectPrefix">
                                @bug.ProjectPrefix-@bug.BugId
                                @{ var status = String.Format("../../Content/Images/" + bug.Status + ".png"); }
                                <img src="@status">
                            </div>
                            <div class="ElementText">
                                @bug.Subject
                            </div>
                        </div>
                        <div class="col-sm-2 col-xs-12 padding-top7 xsPaddingNone">
                            <div style="padding-top: 10px;">
                                @bug.ProjectName
                            </div>
                        </div>
                        <div class="col-sm-2 col-xs-12 padding-top7 xsPaddingNone">
                            <div>
                                <span style="color: gray; font-size: 12px">Created:</span>
                                <span style="font-size: 12px">@bug.CreationDate</span>
                            </div>
                            <div>
                                <span style="color: gray; font-size: 12px">Updated:</span>
                                <span style="font-size: 12px">@bug.ModificationDate</span>
                            </div>
                        </div>
                        @if (bug.AssignedUser != null)
                        {
                            <div class="col-sm-2 col-xs-12 xsPaddingNone">
                                <div class="col-sm-4" style="padding: 0;">
                                    <img src="@bug.AssignedUser.Photo" class="img-circle" alt="userPhoto" height="40" width="40" />
                                </div>
                                <div class="col-sm-8" style="padding-top: 10px;">
                                    <div style="font-size: 12px;">@bug.AssignedUser.FirstName</div>
                                    <div style="font-size: 12px;">@bug.AssignedUser.LastName</div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </a>
        }
    </div>
    <div class="col-xs-12 padding0" style="margin: 15px 20px;">
        <i class="fa fa-pencil-square-o" aria-hidden="true" style="font-size: 18px;"> Tasks: @ViewBag.TaskCount</i>
        <div class="pull-right inline-block" style="margin-right: 9px">
            <nav class="local-pagination">
                <ul class="pagination pagination-sm" id="searchTaskPagination">
                    @for (int i = 1; i < ViewBag.PagesCount + 1; i++)
                    {
                        <li id="@i" style="cursor:pointer"><a>@i</a></li>
                    }
                </ul>
            </nav>
        </div>
    </div>
}
@if (Model.Count() == 0)
{
    <h4>There is no match</h4>
}

<script>
    var a = '#' + '@ViewBag.CurrentPage';
    $('#searchTaskPagination').children(a).addClass('active');
</script>

@if (ViewBag.Search != null || ViewBag.FilterId != null)
{
    <script>
        $('#searchTaskPagination').children('li').on('click', function () {
            var page = $(this).children('a').html();
            var sortBy = $('#searchBugSortBy').html();
            var search = $('#searchGeneral').val();
            $.ajax({
                type: 'GET',
                url: '/Search/SearchResult',
                data: {
                    search: search,
                    filterId: @ViewBag.FilterId,
                    sortBy: sortBy,
                    currentPage: page
                },
                success: function(data) {
                    $('#searchResultContainer').html(data);
                }
            });
        })
    </script>
}
@if (ViewBag.Search == null && ViewBag.FilterId == null)
{
    <script>
        $('#searchTaskPagination').children('li').on('click', function () {
            var page = $(this).children('a').html();
            var sortBy = $('#searchBugSortBy').html();
            var search = $('#extendedSearchSearch').val();
            var customPriority = $("#filterProiritySelect").multipleSelect("getSelects");
            var customStatus = $("#filterStatusSelect").multipleSelect("getSelects");
            var customProjects = $("#filterProjectsSelect").multipleSelect("getSelects");
            var customUsers = $("#filterUsersSelect").multipleSelect("getSelects");
            $.ajax({
                type: 'GET',
                url: '/Search/SearchResultByParams',
                data: {
                    search: search,
                    priority: customPriority,
                    status: customStatus,
                    projects: customProjects,
                    users: customUsers,
                    sortBy: sortBy,
                    currentPage: page
                },
                success: function(data) {
                    $('#searchResultContainer').html(data);
                }
            });
        })
    </script>
}


